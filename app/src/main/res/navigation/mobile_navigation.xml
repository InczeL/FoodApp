<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/restaurant_list">

    <fragment
        android:id="@+id/restaurant_list"
        android:name="com.example.wheretoeat.fragments.RestaurantListFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_restaurantlist" >
        <action
            android:id="@+id/action_restaurant_list_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/profile"
        android:name="com.example.wheretoeat.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.wheretoeat.fragments.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" />
    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.wheretoeat.fragments.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_restaurant_list2"
            app:destination="@id/restaurant_list" />
        <action
            android:id="@+id/action_startFragment_to_singInFragment2"
            app:destination="@id/singInFragment2" />
    </fragment>
    <fragment
        android:id="@+id/singInFragment2"
        android:name="com.example.wheretoeat.fragments.SingInFragment"
        android:label="fragment_sing_in"
        tools:layout="@layout/fragment_sing_in" >
        <action
            android:id="@+id/action_singInFragment2_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>


</navigation>